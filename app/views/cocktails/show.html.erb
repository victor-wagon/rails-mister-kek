<div class="container">
  <div class="row justify-content-center">
    <div class="col-6 offset-col-3">
      <div class="card">
        <div class="card-body" style="">
          <div style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3), url("<%= cl_image_path @cocktail.photo.key %>")">
            <h3 class="text-center">
              <%= @cocktail.name %>
            </h3>
          </div>
          <hr>
          <div class="d-flex align-items-center justify-content-center">
            <h5 class="mt-1">Doses</h5>
            <%= link_to "New", new_cocktail_dose_path(@cocktail), class: "badge badge-secondary" %>
          </div>
          <div class="d-flex">
            <div class="bg-dark">
              <h5>ingredients</h5>
            </div>
            <div>
              <ul>
                <% @doses.each do |dose| %>
                  <li>
                    <%= "#{dose.ingredient.name} - #{dose.description}" %>
                  </li>
                <% end %>
              </ul>
            </div>
            <div class="card-category" >
              Cool article
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>