<div class="container">
  <div class="row">
    <div class="col offset-col">
      <h3 class="text-center">Cocktail List</h3>
    </div>
  </div>
  <div class="row justify-content-center">
    <% @cocktails.each do |coke| %>
      <div class="col-3">
        <div class="card">
          <div class="card-body">
            <div class="title">
              <h3 class="text-center"><%= coke.name %></h3>
            </div>
            <div class="links d-flex justify-content-around">
              <%= link_to "show", cocktail_path(coke), class: "badge badge-secondary" %>
              <%= link_to "edit", edit_cocktail_path(coke), class: "badge badge-secondary" %>
              <%= link_to "delete", cocktail_path(coke), method: :delete, class: "badge badge-secondary" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="row">
    <div class="col-12">
      <%= link_to "create a new cocktail", new_cocktail_path, class: "btn btn-primary btn-block" %>
    </div>
  </div>
</div>